{
    "manifest_version": 2,
    "name": "NCEA SchoolBridge Browser Extension",
    "version": "1.0",
    "description": "Will hide your grades on SchoolBridge and slowly reveal them with the click of the 's' key",
    "icons": {
        "16": "Icons/icon_16.png",
        "48": "Icons/icon_48.png",
        "128": "Icons/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://student.*.school.nz/ncea_summary"
            ],
            "js" : [
                "content.js"
            ]
        }
    ]
}